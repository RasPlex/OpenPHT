				<aligny>center</aligny>
				<font>Bold-36</font>
				<textcolor>orange</textcolor>
				<shadowcolor>FF222222</shadowcolor>
			</control>
			<!-- with Label2 -->
			<control type="label">
				<posy>22</posy>
				<width>353</width>
				<height>20</height>
				<label>$INFO[Container(300).ListItem(0).Label2]</label>
				<align>right</align>
				<aligny>center</aligny>
				<font>Bold-16</font>
				<textcolor>white</textcolor>
				<shadowcolor>FF222222</shadowcolor>
